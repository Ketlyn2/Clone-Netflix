<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".Episodios">

        <ImageView
            android:id="@+id/imagemVideo"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/video"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/play" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagemVideo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:text="The Witcher"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/relevante"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:text="93% relevante"
            android:textColor="@color/Verde"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ano"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/relevante"
            android:fontFamily="@font/semibold"
            android:text="2019"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/temporada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/ano"
            android:fontFamily="@font/semibold"
            android:text="1 Temporada"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relevante"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/regular"
            android:text="@string/descricao"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textoElenco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descricao"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="@string/textoElenco"
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/add1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textoElenco"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_add" />

        <ImageView
            android:id="@+id/add2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textoElenco"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/add1"
            android:src="@drawable/ic_add" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textoElenco"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/add2"
            android:src="@drawable/ic_share" />

        <TextView
            android:id="@+id/texto1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/add1"
            android:layout_marginStart="20dp"
            android:text="Minha Lista"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/texto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add2"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/texto1"
            android:text="Classifique"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/texto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/share"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/texto2"
            android:text="Compartilhe"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/episodios"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/texto1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/semibold"
            android:text="EPISODES"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/trailer"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/texto2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/episodios"
            android:fontFamily="@font/semibold"
            android:text="TRAILER E MORE"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/likethis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/texto3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/trailer"
            android:fontFamily="@font/semibold"
            android:text="MORE LIKE THIS"
            android:textColor="@color/white" />


    </RelativeLayout>
</ScrollView>